<h1>Edit Article</h1>

<form id="edit-form" action="/articles/<%= index %>">
  <div class="form-group">
    <label for="title" class="hidden">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Title" name="title" value="<%= article.title %>">
  </div>

  <div class="form-group">
    <label for="body" class="hidden">Body</label>
    <textarea type="text" class="form-control" id="body" placeholder="Body" name="body"><%= article.body %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
